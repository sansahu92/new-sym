        <script type="text/javascript">
          function changeColor(){
            var boxId = '#colour-box';
            var boxColour = $('.colourAttr').find(":selected").attr('data-color');
            $(boxId).css("background-color", boxColour);
          }
          function showSelectBox(conditionRule){
            var boxId = '#colour-box';
            var boxColour = $('.colourAttr').find(":selected").attr('data-color');
            $(boxId).css("background-color", boxColour);
          }
          $( document ).ready(function() {
            changeColor();
            $('.colourAttr').change(function() {
              changeColor();
            });
          });
        </script>

{% endblock %}
